                    <Button x:ConnectionId='7' Content="Наказания" Width="490"                        />
                    <Button x:ConnectionId='8' Content="Ситуации" Width="490"                       />
                    <TextBlock Text="" FontSize="20" />
                    <Button x:ConnectionId='9' Content="Обратиться к адвокату" Width="490" Background="#FF23AC15"                      />

                </StackPanel>

            </StackPanel>
        </ScrollViewer>
        <Button x:ConnectionId='1' Content="&lt; Back" HorizontalAlignment="Left" Margin="10,-10,0,0" VerticalAlignment="Top" Width="18"                        Background="#FF161174"/>
    </Grid>
</Page>

