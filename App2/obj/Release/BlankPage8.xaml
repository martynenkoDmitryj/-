        <TextBlock Name="Question" HorizontalAlignment="Left" Margin="10,43,0,0" TextWrapping="Wrap" Text="Вопрос" VerticalAlignment="Top" Height="138" Width="430" FontSize="19"/>
        <Button x:ConnectionId='3' Name="NoButton" Content="Нет" HorizontalAlignment="Left" Margin="222,254,0,0" VerticalAlignment="Top" Width="218" Background="#FF0AD600"                       />
        <Button x:ConnectionId='4' Name="AboutThem"  Content="А как у них?" HorizontalAlignment="Left" Margin="10,176,0,0" VerticalAlignment="Top" Width="430" Background="#FFCDA419"                       />
        <TextBlock Name="PunishmentSize" HorizontalAlignment="Left" Margin="10,395,0,0" TextWrapping="Wrap" Text="Размер наказания" VerticalAlignment="Top" Height="367" Width="430" FontSize="19" Foreground="#FFFF2323"/>
        <Button x:ConnectionId='5' Name="NextButton" Content="Дальше" HorizontalAlignment="Left" Margin="331,342,0,0" VerticalAlignment="Top" Background="#FF150EB2"                       />
    </Grid>
</Page>

